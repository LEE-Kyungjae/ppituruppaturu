# PittuRu Blue/Green 배포용 Nginx 설정 예시
# /etc/nginx/sites-available/pitturu.conf

server {
    listen 80;
    server_name 152.67.201.101 ppituruppaturu.com;

    # 프론트엔드 (Blue/Green 업스트림)
    location / {
        proxy_pass http://app_upstream;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # 백엔드 API (분리된 API 업스트림)
    location /api/ {
        proxy_pass http://backend_api_upstream/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # WebSocket (분리된 WS 업스트림)
    location /ws {
        proxy_pass http://backend_ws_upstream;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_read_timeout 60s;
        proxy_send_timeout 60s;
    }

    # 헬스체크
    location /health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }
}

# 업스트림 정의는 /etc/nginx/conf.d/에서 심볼릭 링크로 관리:
# /etc/nginx/conf.d/app-upstream.conf -> /etc/nginx/upstreams/app-blue.conf | app-green.conf
# /etc/nginx/conf.d/backend-api-upstream.conf -> /etc/nginx/upstreams/nginx-backend-api-blue.conf | nginx-backend-api-green.conf
# /etc/nginx/conf.d/backend-ws-upstream.conf -> /etc/nginx/upstreams/nginx-backend-ws-blue.conf | nginx-backend-ws-green.conf